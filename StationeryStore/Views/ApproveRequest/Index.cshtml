@{ 
    ViewBag.Title = "Home";
    var pendingList = ViewBag.pendingList;
    var requestDate = ViewBag.requestDate;
}

<div>@Html.Partial("_Department")</div>

<div class="mainview">
    <div class="maindetails">
        <h3 class="title">View Pending Requests</h3>
        <br />
        <div class="listview">
            <table class="listview">
                <tr class="listview">
                    <td class="listviewheader">Stationery Request</td>
                    <td class="listviewheader">Created Date</td>
                    <td class="listviewheader">Requested By</td>
                </tr>
                @{
                    for (int i = 0; i < pendingList.Count; i++)
                    {
                        string requestNo = pendingList[i].RequestId;
                        if (i % 2 != 0)
                        {
                            <tr class="listview">
                                <td class="oddlistview">@Html.ActionLink(requestNo, "ViewRequest", "ApproveRequest", new { requestId = pendingList[i].RequestId }, null)</td>
                                <td class="oddlistview">@requestDate[i]</td>
                                <td class="oddlistview">@pendingList[i].Staff.Name</td>
                            </tr>
                        }
                        else if (i % 2 == 0)
                        {
                            <tr class="listview">
                                <td class="evenlistview">@Html.ActionLink(requestNo, "ViewRequest", "ApproveRequest",new { requestId = pendingList[i].RequestId }, null)</td>
                                <td class="evenlistview">@requestDate[i]</td>
                                <td class="evenlistview">@pendingList[i].Staff.Name</td>
                            </tr>
                        }
                    }
                }
            </table>
        </div>
    </div>
</div>