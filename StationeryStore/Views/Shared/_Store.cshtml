@*Janel*@

@{
    var role = ViewBag.role;
}

<div class="mainheaderbar">
    <span class="system">STATIONERY STORE INVENTORY SYSTEM</span>
    <span class="mainheaderdetail">Logout</span>
    <span class="mainheaderdetail">Help Btn</span>
    <span class="mainheaderdetail">Store Name (Role)</span>
</div>

<div class="sidenavbar">
    <ul class="sidenavbar">
        <li>
            <button class="sidemain">@Html.ActionLink("Home", "ViewLowStock", "ViewLowStock", new { page = 1 }, new { @class = "sidenavlink" })</button>
        </li>
        <li>
            <button class="collapsible">Inventory</button>
            <div class="content">
                <ul class="sidenavdetails">
                    <li class="sidenavdetails">@Html.ActionLink("Manage Stock Cards", "ViewAllStocks", "ManageStockCard", new { page = 1 }, new { @class = "sidenavlink" })</li>
                    <li class="sidenavdetails">@Html.ActionLink("Create Stock Card", "CreateStockCard", "ManageStockCard", null, new { @class = "sidenavlink" })</li>
                </ul>
            </div>
        </li>
        <li>
            <button class="collapsible">Disbursement</button>
            <div class="content">
                <ul class="sidenavdetails">
                    <li class="sidenavdetails">@Html.ActionLink("Outstanding Requests", "ViewOutstandingRequests", "ViewOutstandingRequests", new { page = 1 }, new { @class = "sidenavlink" })</li>
                    <li class="sidenavdetails">@Html.ActionLink("Retrieval History", "ViewRetrievalHistory", "ManageStationeryRetrieval", new { page = 1 }, new { @class = "sidenavlink" })</li>
                    <li class="sidenavdetails">@Html.ActionLink("Disbursement History", "ViewDisbursementHistory", "ManageStationeryDisbursement", new { page = 1 }, new { @class = "sidenavlink" })</li>
                </ul>
            </div>
        </li>
        <li>
            <button class="collapsible">Purchase Order</button>
            <div class="content">
                <ul class="sidenavdetails">
                    <li class="sidenavdetails">@Html.ActionLink("View Purchase Order History", "PurchaseOrderHistory", "ManagePurchase", null, new { @class = "sidenavlink" })</li>
                    <li class="sidenavdetails">@Html.ActionLink("Create Purchase Order", "CreatePurchaseOrder", "ManagePurchase", null, new { @class = "sidenavlink" })</li>
                </ul>
            </div>
        </li>
        <li>
            <button class="collapsible">Catalogue</button>
            <div class="content">
                <ul class="sidenavdetails">
                    <li class="sidenavdetails">@Html.ActionLink("Manage Catalogue Items", "ViewCatalogue", "ManageCatalogue", new { page = 1 }, new { @class = "sidenavlink" })</li>
                    <li class="sidenavdetails">@Html.ActionLink("Create Catalogue Item", "CreateCatalogueItem", "ManageCatalogue", null, new { @class = "sidenavlink" })</li>
                </ul>
            </div>
        </li>
        <li>
            <button class="collapsible">Supplier</button>
            <div class="content">
                <ul class="sidenavdetails">
                    <li class="sidenavdetails">@Html.ActionLink("Supplier List", "Index", "ManageSupplier", null, new { @class = "sidenavlink" })</li>
                    <li class="sidenavdetails">@Html.ActionLink("Add New Supplier", "CreateSupplier", "ManageSupplier", null, new { @class = "sidenavlink" })</li>
                </ul>
            </div>
        </li>
        <li>
            <button class="collapsible">Adjustment Voucher</button>
            <div class="content">
                <ul class="sidenavdetails">
                    <li class="sidenavdetails">@Html.ActionLink("Adjustment Voucher History", "Index", "ManageAdjustmentVoucher", null, new { @class = "sidenavlink" })</li>
                    <li class="sidenavdetails">@Html.ActionLink("Create Adjustment Voucher", "CreateAdjustmentVoucher", "ManageAdjustmentVoucher", null, new { @class = "sidenavlink" })</li>
                </ul>
            </div>
        </li>
    </ul>
</div>

<script>
var coll = document.getElementsByClassName("collapsible");
var i;
for (i = 0; i < coll.length; i++) {
  coll[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var content = this.nextElementSibling;
    if (content.style.maxHeight){
      content.style.maxHeight = null;
    } else {
      content.style.maxHeight = content.scrollHeight + "px";
    }
  });
}
</script>